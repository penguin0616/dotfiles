{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"final_space": true,
	"version": 3,
	"palette": {
		"wsl": "#770077",
		"pwsh_blue": "#2c4461",
		"github_green": "#1c8139",
		"gitlab_orange": "#fca326"
	},
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "text",
					"style": "plain",
					"template": "",
					"properties": {}
				},
				{
					"type": "session",
					"style": "plain",
					"foreground": "#c8ff05",
					"template": "{{.UserName}}"
				},
				{
					"type": "session",
					"style": "plain",
					"foreground": "#ffffff",
					"template": "@"
				},
				{
					"type": "session",
					"style": "plain",
					"foreground": "#c8ff05",
					"foreground_templates": [
						"{{ if .SSHSession }}red{{ end }}",
						"{{ if .WSL }}p:wsl{{ end }}"
					],
					"template": "{{.HostName}}"
				},
				{
					"type": "path",
					"style": "plain",
					"foreground": "#0CA0D8",
					"template": " {{ .Path }} ",
					"properties": {
						"folder_separator_icon": "/",
						"style": "full"
					}
				},
				{
					"type": "git",
					"style": "plain",
					"foreground": "#ded15e",
					"template": "({{ .Segments.Git.Ref }})",
					"properties": {
						"fetch_status": true
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "right",
			"segments": [
				{
					"type": "python",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"foreground": "#000000",
					"background": "#ffe600",
					"template": "{{ if .Venv }}\ue235({{ .Venv }}){{ end }}",
					"properties": {
						"fetch_virtual_env": true,
						"home_enabled": true
					}
				},
				{
					"type": "shell",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"foreground": "#ffffff",
					"foreground_templates": [
						"{{ if eq .Name \"bash\" }}#000000{{ end }}",
						"{{ if eq .Name \"pwsh\" }}#ffffff{{ end }}"
					],
					"background": "#444444",
					"background_templates": [
						"{{ if eq .Name \"bash\" }}#8dba3c{{ end }}",
						"{{ if eq .Name \"pwsh\" }}p:pwsh_blue{{ end }}"
					],
					"template": "{{ .Name }}",
					"properties": {
						
					}
				},
				{
					"type": "session",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"foreground": "#ffffff",
					"foreground_templates": [
						"{{ if .SSHSession }}#ffffff{{ end }}",
						"{{ if .WSL }}#ffffff{{ end }}"
					],
					"background": "#444444",
					"background_templates": [
						"{{ if .SSHSession }}red{{ end }}",
						"{{ if .WSL }}p:wsl{{ end }}"
					],
					"template": "{{ if .SSHSession }}SSH{{ else if .WSL }}WSL{{ end }}",
					"properties": {}
				},
				{
					"type": "time",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"trailing_diamond": "\ue0b4",
					"foreground": "#fcfcfc",
					"background": "#444499",
					"template": "{{ .CurrentDate | date .Format }}",
					"min_width": 100,
					"properties": {
						"time_format": "03:04:05 PM MST"
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "left",
			"newline": true,
			"segments": [
				{
					"type": "status",
					"style": "diamond",
					"leading_diamond": "\ue0b6",
					"trailing_diamond": "\ue0b4",
					"foreground": "#ffffff",
					"foreground_templates": [],
					"background": "#1b2a35",
					"background_templates": [
						"{{ if gt .Code 0 }}#990000{{ end }}"
					],
					"template": "{{ if gt .Code 0 }}Error [{{ .String }}]: {{ reason .Code }}{{ else }}\uf42e{{ end }}",
					"properties": {
						"always_enabled": false
					}
				}
			]
		},
		{
			"type": "prompt",
			"newline": true,
			"alignment": "left",
			"segments": [
				{
					"type": "text",
					"style": "plain",
					"template": "\u2570\u2500",
					"properties": {}
				},
				{
					"type": "git",
					"style": "diamond",
					"leading_diamond": "\ue0b7",
					"trailing_diamond": "\ue0b5",
					"foreground": "#ffffff",
					"foreground_templates": [
						"{{ if matchP \"github\" .UpstreamURL }}p:github_green{{ end }}",
						"{{ if matchP \"gitlab\" .UpstreamURL }}p:gitlab_orange{{ end }}"
					],
					"template": "{{ .UpstreamIcon }}{{ .User.Name }}",
					"properties": {
						"fetch_user": true,
						"fetch_upstream_icon": true
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "left",
			"newline": false,
			"segments": [
				{
					"foreground": "#ff0000",
					"style": "plain",
					"template": "#",
					"type": "root"
				},
				{
					"foreground": "#ffffff",
					"style": "plain",
					"template": " $",
					"type": "text"
				}
			]
		}
	]
}