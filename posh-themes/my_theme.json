{
	"$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
	"final_space": true,
	"version": 3,
	"blocks": [
		{
			"type": "prompt",
			"alignment": "left",
			"segments": [
				{
					"type": "session",
					"style": "plain",
					"foreground": "#c8ff05",
					"template": "{{.UserName}}"
				},
				{
					"type": "session",
					"style": "plain",
					"foreground": "#ffffff",
					"template": "@"
				},
				{
					"type": "session",
					"style": "plain",
					"foreground": "#c8ff05",
					"template": "{{.HostName}}"
				},
				{
					"type": "path",
					"style": "plain",
					"foreground": "#0CA0D8",
					"template": " {{ .Path }} ",
					"properties": {
						"folder_separator_icon": "/",
						"style": "full"
					}
				},
				{
					"type": "git",
					"style": "plain",
					"foreground": "#ded15e",
					"template": "({{ .Segments.Git.Ref }})",
					"properties": {
						"fetch_status": true
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "right",
			"segments": [
				{
					"type": "git",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"foreground": "#ffffff",
					"background": "#1c8139",
					"template": "{{ .UpstreamIcon }}{{ .User.Name }}",
					"properties": {
						"fetch_user": true,
						"fetch_upstream_icon": true
					}
				},
				{
					"type": "python",
					"style": "diamond",
					"leading_diamond": "\ue0b2",
					"foreground": "transparent",
					"background": "#ded15e",
					"template": "{{ .Venv }}",
					"properties": {
						"fetch_virtual_env": true,
						"home_enabled": true
					}
				},
				{
					"type": "time",
					"style": "diamond",
					"invert_powerline": true,
					"leading_diamond": "\ue0b2",
					"trailing_diamond": "\ue0b4",
					"foreground": "#fcfcfc",
					"background": "#444499",
					"template": "{{ .CurrentDate | date .Format }}",
					"properties": {
						"time_format": "03:04:05 PM MST"
					}
				}
			]
		},
		{
			"type": "prompt",
			"alignment": "left",
			"newline": true,
			"segments": [
				{
					"type": "status",
					"style": "diamond",
					"leading_diamond": "\ue0b6",
					"trailing_diamond": "\ue0b4",
					"foreground": "#ffffff",
					"foreground_templates": [],
					"background": "#1b2a35",
					"background_templates": [
						"{{ if gt .Code 0 }}#990000{{ end }}"
					],
					"template": "{{ if gt .Code 0 }}Error [{{ .String }}]: {{ reason .Code }}{{ else }}\uf42e{{ end }}",
					"properties": {
						"always_enabled": false
					}
				}
			]
		},
		{
			"alignment": "left",
			"newline": true,
			"segments": [
				{
					"foreground": "#ff0000",
					"style": "plain",
					"template": "#",
					"type": "root"
				},
				{
					"foreground": "#CD4277",
					"style": "plain",
					"template": ">",
					"type": "text"
				}
			],
			"type": "prompt"
		}
	]
}